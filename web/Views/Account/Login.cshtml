@model NXYSOFT_RMS.Models.UserAccount
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "Login";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()


    <div class="Login-modal-container" >
        <div class="form-horizontal">
            @*<h2>Login</h2>*@
            <div align="center"><img src="~/Images/logo.png" width="300" height="80" style="margin-top:0px;border-radius: 20px;" /></div>
            <hr />
            <h4>Welcome to TARA! LRT, Kindly login your account to start.</h4>
            <hr />


            @if (ViewBag.SystemError != "")
            {
                <script>
                    $(document).ready(function () {
                        $('.SystemMsgErrorModal').modal('show');

                    });
                </script>
            }


            <div class="form-group form-group-Login">
                @Html.LabelFor(model => model.AccountID, new { @class = "control-label col-md-4" })
                <div class="col-md-7">
                    @Html.TextBoxFor(model => model.AccountID, new { @class = "textbox" })
                    @* @Html.ValidationMessageFor(model => model.UserName, "*")*@
                </div>
            </div>
            <div class="form-group form-group-Login">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-4" })
                <div class="col-md-7">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "textbox" })
                   @* @Html.ValidationMessageFor(model => model.UserName, "*")*@
                </div>
            </div>

            <div class="form-group form-group-Login">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-4" })
                <div class="col-md-7">
                    @Html.PasswordFor(model => model.Password, new { @class = "textbox" })
                   @* @Html.ValidationMessageFor(model => model.Password, "*")*@
                </div>
            </div>

            @*<div class="form-group">
                    @Html.LabelFor(model => model.RememberMe, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RememberMe)
                        @Html.ValidationMessageFor(model => model.RememberMe)
                    </div>
                </div>*@

            <div class="form-group">
                <div class="col-md-4" >                    
                </div>
                <div class="col-md-7" style="text-align: center;">
                    <input id="btnlogin" type="submit" value="Login" class="btn btn-primary" style="margin-top:5px; width:170px;" />
                </div>
            </div>
            <hr />
            <footer>
                <p>&copy; TARA! LRT @DateTime.Now.Year</p>
            </footer>

        </div>
        <div class="modal fade SystemMsgErrorModal" id="basic" tabindex="-1" role="basic" aria-hidden="true" data-backdrop="static" data-keyboard="false" style="display: none;">
            <div class="modal-dialog modal-lg" style="max-width:400px">
                <div class="modal-content">
                    <div class="modal-header modal-header-warning">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <div class="ErrorIcon"><h4 class="modal-title">System Message</h4></div>
                    </div>
                    <div class="modal-body">
                        <div class="modalmessage">@Html.ValidationSummary(true)</div>
                        <div style="padding-left:50px">@Html.ValidationMessageFor(model => model.UserName)</div>
                        <div style="padding-left:50px">@Html.ValidationMessageFor(model => model.Password)</div>
                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" type="button" class="btn btn-warning">Ok</button>

                    </div>
                </div>
            </div>
        </div>
       
        </div>
        }



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

<script type="text/javascript">

    getscreenresolution();
    window.onresize = function () {
        getscreenresolution();
    }
    function getscreenresolution() {
        if ($(window).width() < 1160) {
            document.getElementById('AccountID').style.width = "100%";
            document.getElementById('UserName').style.width = "100%";
            document.getElementById('Password').style.width = "100%";
            document.getElementById('btnlogin').width = document.getElementById('Password').width;
        }
        else {
            document.getElementById('AccountID').style.width = "100%";
            document.getElementById('UserName').style.width = "100%";
            document.getElementById('Password').style.width = "100%";
            document.getElementById('btnlogin').width = document.getElementById('Password').width;

            
        }
    }
</script>