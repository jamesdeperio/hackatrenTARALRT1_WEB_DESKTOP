@model NXYSOFT_RMS.Models.UserAccount


@{
    ViewBag.Title = "User Update Profile";
}

<h2>Account Update</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    
    
    <div class="form-horizontal">
                          
        <div class="form-group">
            @Html.LabelFor(model => model.CurrentUserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CurrentUserName, new { @class = "textbox", @style = "width:220px;" })
                @Html.ValidationMessageFor(model => model.CurrentUserName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CurrentPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.CurrentPassword, new { @class = "textbox", @style = "width:220px;" })
                @Html.ValidationMessageFor(model => model.CurrentPassword, "*")
            </div>
        </div>
        <hr width="100%" />
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "textbox", @style = "width:220px;"})
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { @class = "textbox", @style = "width:220px;" })
                    @Html.ValidationMessageFor(model => model.Password, "*")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "textbox", @style = "width:220px;" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "*")
                </div>
            </div>
          
           

            @Html.HiddenFor(model => model.CurrentID)

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-primary" data-toggle="modal" data-target=".UpdateModal">Update</a>
            </div>
        </div>
            

        <div class="modal fade UpdateModal" id="basic" tabindex="-1" role="basic" aria-hidden="true" data-backdrop="static" data-keyboard="false" style="display: none;">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Update Confirmation</h4>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to update this record?
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Yes" class="btn btn-primary" />
                        <button data-dismiss="modal" type="button" class="btn btn-primary">Cancel</button>


                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade SystemMsgErrorModal" id="basic" tabindex="-1" role="basic" aria-hidden="true" data-backdrop="static" data-keyboard="false" style="display: none;">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header modal-header-warning">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">System Message</h4>
                    </div>
                    <div class="modal-body">
                        <div>@Html.ValidationSummary(true)</div>
                        <div style="padding-left:50px">@Html.ValidationMessageFor(model => model.UserName)</div>
                        <div style="padding-left:50px">@Html.ValidationMessageFor(model => model.Password)</div>
                        <div style="padding-left:50px">@Html.ValidationMessageFor(model => model.ConfirmPassword)</div>
                        <div style="padding-left:50px">@Html.ValidationMessageFor(model => model.CurrentPassword)</div>
                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" type="button" class="btn btn-warning">Ok</button>

                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade SystemMsgSuccessModal" id="basic" tabindex="-1" role="basic" aria-hidden="true" data-backdrop="static" data-keyboard="false" style="display: none;">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header modal-header-success ">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">System Message</h4>
                    </div>
                    <div class="modal-body">
                        <h4 class="modal-title">Record Saved!</h4>

                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" type="button" class="btn btn-success">Ok</button>

                    </div>
                </div>
            </div>
        </div>

       
            
</div>
}

@if (ViewBag.SystemError != "")
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.SystemMsgErrorModal').modal('show');

        });
    </script>
}

@if (ViewBag.SystemSuccess != "")
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.SystemMsgSuccessModal').modal('show');

        });
    </script>
}




